<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout_accounts_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    android:gravity="center_vertical"
    android:padding="@dimen/padding_small"
    android:layout_marginTop="@dimen/padding_small"
    android:background="@drawable/shape_underline_dashed">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/padding_bit">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4.9"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout_acounts_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_underline"
                android:backgroundTint="@color/shiri"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="بانک "
                    android:maxLines="1"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/font_medium" />

                <TextView
                    android:id="@+id/textView_accounts_bankName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="بانک کشاورزی"
                    android:maxLines="1"
                    app:fontPath="fonts/IRANSansWeb_Bold.ttf"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/font_medium" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/padding_bit">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="شعبه "
                    android:maxLines="1"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/font_small" />

                <TextView
                    android:id="@+id/textView_acounts_shobeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="انقلاب اسلامی"
                    android:maxLines="1"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/font_small" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_acounts_shomareHesabText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_small"
                    android:text="شماره حساب :"
                    android:textColor="@color/primary_text"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/textView_acounts_shomareHesab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_small"
                    android:text="1000236589512541"
                    android:maxLines="1"
                    android:paddingRight="@dimen/padding_medium"
                    android:paddingLeft="@dimen/padding_medium"
                    android:textColor="@color/primary_text"
                    android:gravity="center_vertical"/>

            </LinearLayout>
        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".1"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical">

            <Space
                android:id="@+id/imageView_acount_side_call"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_medium"
                android:backgroundTint="@color/primary_dark"
                android:padding="@dimen/padding_small"
                app:srcCompat="@drawable/shape_call_collapsed" />

            <ImageView
                android:id="@+id/imageView_acounts_arrow"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/primary_dark"
                android:padding="@dimen/padding_small"
                app:srcCompat="@drawable/shape_arrow_drop_down" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/linearLayout_accounts_extra_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_acounts_shomareKartText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_small"
                    android:text="شماره کارت :"
                    android:textColor="@color/primary_text"
                    android:gravity="center_vertical"/>

                <TextView
                    android:id="@+id/textView_acounts_shomareKart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_small"
                    android:text="5632-9658-8569-1500"
                    android:maxLines="1"
                    android:textColor="@color/primary_text"
                    android:paddingRight="@dimen/padding_medium"
                    android:paddingLeft="@dimen/padding_medium"
                    android:gravity="center_vertical"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="@dimen/padding_large"
            android:layout_marginLeft="@dimen/padding_large"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:visibility="gone"
                android:id="@+id/textView_accounts_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ویرایش"
                android:gravity="center"
                android:background="@drawable/shape_circle"
                android:paddingRight="@dimen/padding_spinner"
                android:paddingTop="@dimen/padding_bit"
                android:paddingBottom="@dimen/padding_bit"
                android:paddingLeft="@dimen/padding_spinner"
                android:textColor="@color/icons"
                android:layout_marginBottom="@dimen/padding_medium"
                android:backgroundTint="@color/primary_dark"
                android:textSize="@dimen/font_small"/>

            <TextView
                android:id="@+id/textView_accounts_delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="حذف"
                android:gravity="center"
                android:background="@drawable/shape_circle"
                android:paddingRight="@dimen/padding_spinner"
                android:paddingTop="@dimen/padding_bit"
                android:paddingBottom="@dimen/padding_bit"
                android:paddingLeft="@dimen/padding_spinner"
                android:textColor="@color/icons"
                android:backgroundTint="@color/red"
                android:textSize="@dimen/font_small"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>
