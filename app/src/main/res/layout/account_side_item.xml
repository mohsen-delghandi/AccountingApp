<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout_account_side_main"
xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layoutDirection="rtl"
android:gravity="center_vertical"
android:padding="@dimen/padding_small"
android:layout_marginTop="@dimen/padding_small"
android:background="@drawable/shape_underline_dashed">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/padding_bit">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout_acount_side_main_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_underline"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_acount_side_pishvand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="نوید مندیس"
                    android:maxLines="1"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/font_small" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text=" "
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/font_medium" />

                <TextView
                    android:id="@+id/textView_acount_side_fullName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="نوید مندیس"
                    android:maxLines="1"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/font_medium" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/textView_acount_side_dash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text=" - "
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/font_medium" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/textView_acount_side_company_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="زاگ استادیو"
                    android:maxLines="1"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/font_small" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/padding_bit">

                <ImageView
                    android:id="@+id/imageView_acount_side_bedehi"
                    android:layout_width="@dimen/padding_medium"
                    android:layout_height="@dimen/padding_medium"
                    android:gravity="center_vertical"
                    android:src="@drawable/shape_arrow_down"
                    android:tint="@color/green" />

                <TextView
                    android:id="@+id/textView_acount_side_bedehi_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text=" بدهکار "
                    android:maxLines="1"
                    android:textColor="@color/green"
                    android:textSize="@dimen/font_small" />

                <TextView
                    android:id="@+id/textView_acount_side_bedehi_dash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text=" - "
                    android:textColor="@color/green"
                    android:textSize="@dimen/font_small" />

                <TextView
                    android:id="@+id/textView_acount_side_bedehi_mablagh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingRight="@dimen/padding_bit"
                    android:text="150,000,000"
                    android:maxLines="1"
                    android:textColor="@color/green"
                    android:textSize="@dimen/font_small" />

                <TextView
                    android:id="@+id/textView_acount_side_bedehi_vahed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/padding_bit"
                    android:gravity="center_vertical"
                    android:text="ریال"
                    android:textColor="@color/green"
                    android:textSize="@dimen/font_xsmall" />
            </LinearLayout>
        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical">

            <ImageView
                android:id="@+id/imageView_acount_side_call"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_medium"
                android:backgroundTint="@color/primary_dark"
                android:padding="@dimen/padding_small"
                app:srcCompat="@drawable/shape_call_collapsed" />

            <ImageView
                android:id="@+id/imageView_acount_side_arrow"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/primary_dark"
                android:padding="@dimen/padding_small"
                android:src="@drawable/shape_arrow_drop_down" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/linearLayout_account_side_extra_information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="wrap_content">

        <LinearLayout
    android:layout_marginTop="@dimen/padding_large"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_small"
        android:text="تلفن :"
        android:textColor="@color/icons"
        android:gravity="center_vertical"/>
    <TextView
        android:id="@+id/textView_acount_side_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_small"
        android:text="05123565448"
        android:paddingRight="@dimen/padding_medium"
        android:paddingLeft="@dimen/padding_medium"
        android:textColor="@color/icons"
        android:gravity="center_vertical"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_small"
        android:text="همراه :"
        android:layout_marginRight="@dimen/padding_large"
        android:textColor="@color/icons"
        android:gravity="center_vertical"/>
    <TextView
        android:id="@+id/textView_acount_side_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_small"
        android:text="09359146436"
        android:paddingRight="@dimen/padding_medium"
        android:paddingLeft="@dimen/padding_medium"
        android:textColor="@color/icons"
        android:gravity="center_vertical"/>

</LinearLayout>

        <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_small"
        android:text="آدرس :"
        android:textColor="@color/icons"
        android:gravity="center_vertical"/>

    <TextView
        android:id="@+id/textView_acount_side_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_small"
        android:text="سبزوار، خیابان ابن یمین، ساختمان دادآفرین"
        android:textColor="@color/icons"
        android:paddingRight="@dimen/padding_medium"
        android:paddingLeft="@dimen/padding_medium"
        android:gravity="center_vertical"/>

</LinearLayout>

    </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="@dimen/padding_large"
            android:layout_marginLeft="@dimen/padding_large"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:id="@+id/textView_acount_side_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ویرایش"
                android:gravity="center"
                android:background="@drawable/shape_circle"
                android:paddingRight="@dimen/padding_spinner"
                android:paddingTop="@dimen/padding_bit"
                android:paddingBottom="@dimen/padding_bit"
                android:paddingLeft="@dimen/padding_spinner"
                android:textColor="@color/icons"
                android:layout_marginBottom="@dimen/padding_medium"
                android:backgroundTint="@color/primary_dark"
                android:textSize="@dimen/font_small"/>

            <TextView
                android:id="@+id/textView_acount_side_delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="حذف"
                android:gravity="center"
                android:background="@drawable/shape_circle"
                android:paddingRight="@dimen/padding_spinner"
                android:paddingTop="@dimen/padding_bit"
                android:paddingBottom="@dimen/padding_bit"
                android:paddingLeft="@dimen/padding_spinner"
                android:textColor="@color/icons"
                android:backgroundTint="@color/red"
                android:textSize="@dimen/font_small"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
