<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layoutDirection="rtl"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/padding_large">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="@dimen/padding_xlarge"
        android:background="@drawable/shape_border_tire_shiri">

        <LinearLayout
            android:paddingBottom="@dimen/padding_xlarge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_underline">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="چک امروز به مبلغ"
                android:textColor="@color/new_text"
                android:textSize="@dimen/font_small"
                />

            <TextView
                android:id="@+id/textView_first_mablagh"
                android:paddingRight="@dimen/padding_medium"
                android:paddingLeft="@dimen/padding_medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="150,000,000,000"
                android:textColor="@color/green"
                android:textSize="@dimen/font_small"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ریال پرداخت به : "
                android:textColor="@color/new_text"
                android:textSize="@dimen/font_small"/>

            <TextView
                android:id="@+id/textView_first_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="نوید مندیس"
                android:textColor="@color/new_text"
                android:textSize="@dimen/font_small"/>

        </LinearLayout>

        <LinearLayout
            android:paddingTop="@dimen/padding_small"
            android:paddingBottom="@dimen/padding_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="نام بانک : "
                android:textColor="@color/new_text"
                android:textSize="@dimen/font_small"/>

            <TextView
                android:id="@+id/textView_first_bank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="صادرات"
                android:textColor="@color/new_text"
                android:textSize="@dimen/font_small"/>

            <Space
                android:layout_width="@dimen/dimen_xxxlarge"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="شماره چک : "
                android:textColor="@color/new_text"
                android:textSize="@dimen/font_small"/>

            <TextView
                android:id="@+id/textView_first_check_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25633595"
                android:textColor="@color/new_text"
                android:textSize="@dimen/font_small"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="توضیحات : "
                android:textColor="@color/new_text"
                android:textSize="@dimen/font_small"/>

            <TextView
                android:id="@+id/textView_first_exp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="این چک جهت آخرین پرداخت بوده است."
                android:textColor="@color/new_text"
                android:textSize="@dimen/font_small"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>