<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layoutDirection="rtl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/icons">

    <LinearLayout
        android:id="@+id/linearLayout_titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:paddingRight="@dimen/padding_medium"
        android:paddingLeft="@dimen/padding_medium"
        android:paddingBottom="@dimen/padding_bit">

        <!--<android.support.v7.widget.Toolbar-->
        <!--android:id="@+id/toolbar"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="?attr/actionBarSize"-->
        <!--android:background="@android:color/transparent"-->
        <!--app:popupTheme="@style/AppTheme.PopupOverlay">-->


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/padding_medium"
            android:paddingBottom="@dimen/padding_medium"
            android:paddingRight="@dimen/padding_bit"
            android:paddingLeft="@dimen/padding_bit"
            android:gravity="center_vertical"
            android:backgroundTint="@color/new_text"
            android:background="@drawable/shape_underline">

            <LinearLayout
                android:padding="@dimen/padding_large"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content">

                <TextView
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="فروش محصـــولات"
                    android:textColor="@color/new_text"
                    android:textSize="@dimen/font_large"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PRODUCTS"
                        android:textSize="@dimen/font_medium"
                        android:textColor="@color/new_text"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SELLING "
                        app:fontPath="fonts/IRANSansWeb_Bold.ttf"
                        android:textSize="@dimen/font_medium"
                        android:textColor="@color/new_text"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"
                android:gravity="left">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/shape_question"
                    android:background="@drawable/shape_circle"
                    android:padding="@dimen/padding_small"
                    android:layout_marginLeft="@dimen/padding_small"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/shape_arrow_left"
                    android:background="@drawable/shape_circle"
                    android:padding="@dimen/padding_small"
                    />
            </LinearLayout>

        </LinearLayout>

        <!--</android.support.v7.widget.Toolbar>-->


    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_accountSide"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

    <TextView
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_item_height" />

</LinearLayout>