<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:padding="@dimen/padding_box"
    android:background="#E6242E42">

    <LinearLayout
        android:layout_marginBottom="@dimen/padding_large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:background="@drawable/shape_circle"
            android:backgroundTint="@color/primary"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textView_buy_and_sell_kharid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="خرید"
                android:textSize="@dimen/font_xmedium"
                android:gravity="center"
                android:paddingBottom="@dimen/padding_medium"
                android:paddingTop="@dimen/padding_medium"
                android:paddingRight="@dimen/padding_spinner"
                android:paddingLeft="@dimen/padding_spinner"
                android:textColor="@color/icons"/>
            <TextView
                android:id="@+id/textView_buy_and_sell_forosh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="فروش"
                android:textSize="@dimen/font_xmedium"
                android:gravity="center"
                android:paddingBottom="@dimen/padding_medium"
                android:paddingTop="@dimen/padding_medium"
                android:paddingRight="@dimen/padding_spinner"
                android:paddingLeft="@dimen/padding_spinner"
                android:background="@drawable/shape_circle"
                android:backgroundTint="@color/icons"
                android:textColor="@color/primary_dark"/>
            <TextView
                android:visibility="gone"
                android:id="@+id/textView_buy_and_sell_hame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="همه"
                android:textSize="@dimen/font_xmedium"
                android:gravity="center"
                android:paddingBottom="@dimen/padding_medium"
                android:paddingTop="@dimen/padding_medium"
                android:paddingRight="@dimen/padding_spinner"
                android:paddingLeft="@dimen/padding_spinner"
                android:textColor="@color/icons"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:gravity="left">
            <ImageView
                android:id="@+id/imageView_buy_and_sell_2nd_help"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shape_question"
                android:background="@drawable/shape_circle"
                android:padding="@dimen/padding_small"
                android:layout_marginLeft="@dimen/padding_small"
                />
            <ImageView
                android:id="@+id/imageView_buy_and_sell_2nd_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shape_arrow_left"
                android:background="@drawable/shape_circle"
                android:padding="@dimen/padding_small"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_large"
        android:background="@drawable/shape_border"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_add_account_fullName"
            style="@style/etStyle"
            android:layout_width="wrap_content"
            android:text="شنبه 25 شهریور سال 96"
            android:inputType="textPersonName"
            android:nextFocusForward="@+id/editText_add_account_codeMelli"
            android:textColor="@color/icons"/>

        <TextView
            style="@style/etStyle"
            android:id="@+id/editText_add_account_fullName"
            android:text="17:16"
            android:gravity="left"
            android:inputType="textPersonName"
            android:nextFocusForward="@+id/editText_add_account_codeMelli"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/padding_large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/shape_border">
        <TextView
            style="@style/etStyle"
            android:layout_width="wrap_content"
            android:id="@+id/textView_add_account_phone"
            android:text="شماره چک"
            android:nextFocusForward="@+id/editText_add_account_mobile"
            android:inputType="phone"
            />
        <EditText
            style="@style/etStyle"
            android:id="@+id/editText_add_account_phone"
            android:nextFocusForward="@+id/editText_add_account_mobile"
            android:inputType="phone"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/padding_large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/shape_border">
        <TextView
            style="@style/etStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/textView_add_account_codeMelli"
            android:text="مبلغ"
            android:nextFocusForward="@+id/editText_add_account_phone"
            />

        <EditText
            style="@style/etStyle"
            android:layout_width="0dp"
            android:layout_weight="2"/>

        <TextView
            style="@style/etStyle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/editText_add_account_codeMelli"
            android:text="تومان"
            android:nextFocusForward="@+id/editText_add_account_phone"
            android:inputType="phone"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/padding_large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/shape_border">
        <TextView
            style="@style/etStyle"
            android:layout_width="wrap_content"
            android:id="@+id/textView_add_account_mobile"
            android:text="طرف حساب"
            android:nextFocusForward="@+id/editText_add_account_address"
            android:inputType="phone"
            />
        <EditText
            style="@style/etStyle"
            android:id="@+id/editText_add_account_mobile"
            android:nextFocusForward="@+id/editText_add_account_address"
            android:inputType="phone"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/padding_large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/shape_border">
        <TextView
            style="@style/etStyle"
            android:layout_width="wrap_content"
            android:id="@+id/textView_add_account_address"
            android:text="تاریخ چک"
            android:lines="5"
            android:gravity="top"
            android:inputType="text"
            />
        <TextView
            style="@style/etStyle"
            android:id="@+id/editText_add_account_address"
            android:text="شنبه 25 شهریور سال 96"
            android:inputType="text"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/padding_large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/shape_border">
        <TextView
            style="@style/etStyle"
            android:layout_width="wrap_content"
            android:id="@+id/textView_add_account_mobile"
            android:text="بانک"
            android:nextFocusForward="@+id/editText_add_account_address"
            android:inputType="phone"
            />
        <EditText
            style="@style/etStyle"
            android:id="@+id/editText_add_account_mobile"
            android:nextFocusForward="@+id/editText_add_account_address"
            android:inputType="phone"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/padding_large"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/shape_border">
        <TextView
            style="@style/etStyle"
            android:layout_width="wrap_content"
            android:id="@+id/textView_add_account_address"
            android:text="توضیحات"
            android:lines="5"
            android:gravity="top"
            android:inputType="text"
            />
        <EditText
            style="@style/etStyle"
            android:id="@+id/editText_add_account_address"
            android:lines="5"
            android:gravity="top"
            android:inputType="text"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_large"
        android:gravity="left|center_vertical"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/padding_large"
        android:paddingRight="@dimen/padding_spinner"
        android:paddingTop="@dimen/padding_large">

        <TextView
            android:id="@+id/textView_add_account_clean"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_circle"
            android:backgroundTint="@color/orange"
            android:gravity="center"
            android:paddingBottom="@dimen/padding_medium"
            android:paddingLeft="@dimen/padding_large"
            android:paddingRight="@dimen/padding_large"
            android:paddingTop="@dimen/padding_medium"
            android:text="نوسازی"
            android:textColor="@color/icons"
            android:textSize="@dimen/font_small" />

        <TextView
            android:id="@+id/textView_add_account_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/padding_medium"
            android:background="@drawable/shape_circle"
            android:backgroundTint="@color/green"
            android:gravity="center"
            android:paddingBottom="@dimen/padding_medium"
            android:paddingLeft="@dimen/padding_spinner"
            android:paddingRight="@dimen/padding_spinner"
            android:paddingTop="@dimen/padding_medium"
            android:text="ثبت"
            android:textColor="@color/icons"
            android:textSize="@dimen/font_small" />
    </LinearLayout>

</LinearLayout>