<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/icons"
    android:layoutDirection="rtl"
    tools:context="com.example.mohsen.myaccountingapp.MainActivity">


    <LinearLayout
        android:id="@+id/linearLayout_titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/padding_bit"
        android:paddingLeft="@dimen/padding_medium"
        android:paddingRight="@dimen/padding_medium">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_underline"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/padding_medium"
            android:paddingLeft="@dimen/padding_bit"
            android:paddingRight="@dimen/padding_bit"
            android:paddingTop="@dimen/padding_medium">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_circle"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView_navigation_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/padding_small"
                    android:paddingLeft="@dimen/padding_medium"
                    android:paddingRight="@dimen/padding_medium"
                    android:paddingTop="@dimen/padding_small"
                    app:srcCompat="@drawable/shape_hamburger" />

                <TextView
                    android:layout_width="1px"
                    android:layout_height="wrap_content"
                    android:alpha=".5"
                    android:background="@color/icons" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/padding_small"
                    android:paddingLeft="@dimen/padding_medium"
                    android:paddingRight="@dimen/padding_medium"
                    android:paddingTop="@dimen/padding_small"
                    app:srcCompat="@drawable/shape_home" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingRight="@dimen/padding_medium">

                <TextView
                    android:id="@+id/textView_title_farsi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="عنوان فارسی"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/font_small"
                    app:fontPath="fonts/IRANSansWeb_Bold.ttf" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView_title_farsi"
                    android:layout_marginTop="-5dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_title_english_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="TITLE"
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/font_small"
                        app:fontPath="fonts/IRANSansWeb_Bold.ttf" />

                    <TextView
                        android:id="@+id/textView_title_english_normal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="ENGLISH "
                        android:textColor="@color/primary_text"
                        android:textSize="@dimen/font_small" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="left"
                android:visibility="invisible">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_small"
                    android:background="@drawable/shape_circle"
                    android:padding="@dimen/padding_small"
                    app:srcCompat="@drawable/shape_question" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_circle"
                    android:padding="@dimen/padding_small"
                    app:srcCompat="@drawable/shape_search" />
            </LinearLayout>

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/frameLayout_attached"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linearLayout_buy_and_sell_attached"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_large"
                android:gravity="center"
                android:paddingBottom="@dimen/padding_large"
                android:paddingTop="@dimen/padding_medium">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_circle"
                    android:backgroundTint="@color/primary"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_buy_and_sell_kharid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingBottom="@dimen/padding_medium"
                        android:paddingLeft="@dimen/padding_spinner"
                        android:paddingRight="@dimen/padding_spinner"
                        android:paddingTop="@dimen/padding_medium"
                        android:text="خرید"
                        android:textColor="@color/icons"
                        android:textSize="@dimen/font_xmedium" />

                    <TextView
                        android:id="@+id/textView_buy_and_sell_forosh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_circle"
                        android:backgroundTint="@color/primary_dark"
                        android:gravity="center"
                        android:paddingBottom="@dimen/padding_medium"
                        android:paddingLeft="@dimen/padding_spinner"
                        android:paddingRight="@dimen/padding_spinner"
                        android:paddingTop="@dimen/padding_medium"
                        android:text="فروش"
                        android:textColor="@color/icons"
                        android:textSize="@dimen/font_xmedium" />

                    <TextView
                        android:id="@+id/textView_buy_and_sell_hame"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingBottom="@dimen/padding_medium"
                        android:paddingLeft="@dimen/padding_spinner"
                        android:paddingRight="@dimen/padding_spinner"
                        android:paddingTop="@dimen/padding_medium"
                        android:text="همه"
                        android:textColor="@color/icons"
                        android:textSize="@dimen/font_xmedium"
                        android:visibility="gone" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout_transaction_attached"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/padding_large"
                android:gravity="center"
                android:paddingBottom="@dimen/padding_large"
                android:paddingTop="@dimen/padding_medium">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_circle"
                    android:backgroundTint="@color/primary"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView_transaction_daryaft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_circle"
                        android:backgroundTint="@color/primary_dark"
                        android:gravity="center"
                        android:paddingBottom="@dimen/padding_medium"
                        android:paddingLeft="@dimen/padding_spinner"
                        android:paddingRight="@dimen/padding_spinner"
                        android:paddingTop="@dimen/padding_medium"
                        android:text="دریافت"
                        android:textColor="@color/icons"
                        android:textSize="@dimen/font_xmedium" />

                    <TextView
                        android:id="@+id/textView_transaction_pardakht"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingBottom="@dimen/padding_medium"
                        android:paddingLeft="@dimen/padding_spinner"
                        android:paddingRight="@dimen/padding_spinner"
                        android:paddingTop="@dimen/padding_medium"
                        android:text="پرداخت"
                        android:textColor="@color/icons"
                        android:textSize="@dimen/font_xmedium" />

                    <TextView
                        android:id="@+id/textView_transaction_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingBottom="@dimen/padding_medium"
                        android:paddingLeft="@dimen/padding_spinner"
                        android:paddingRight="@dimen/padding_spinner"
                        android:paddingTop="@dimen/padding_medium"
                        android:text="همه"
                        android:textColor="@color/icons"
                        android:textSize="@dimen/font_xmedium"
                        android:visibility="gone" />
                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="@dimen/fab_margin"
        android:scaleType="center"
        app:backgroundTint="@color/primary"
        app:srcCompat="@drawable/shape_plus" />

    <!--<TextView-->
    <!--android:layout_marginBottom="40dp"-->
    <!--android:layout_marginRight="16dp"-->
    <!--android:layout_gravity="bottom|right"-->
    <!--android:layout_width="@dimen/padding_medium"-->
    <!--android:layout_height="@dimen/padding_medium"-->
    <!--android:text="1"-->
    <!--android:textSize="@dimen/font_medium"-->
    <!--android:background="@drawable/shape_circle"-->
    <!--android:backgroundTint="@color/red"/>-->


    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nestedscrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:fillViewport="true" />

    <LinearLayout
        android:id="@+id/linearLayout_bill_vazia_kol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:nestedScrollingEnabled="false"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_white_gradient"
            android:gravity="center"
            android:paddingBottom="@dimen/padding_spinner"
            android:paddingLeft="@dimen/padding_bit"
            android:paddingRight="@dimen/dimen_xlarge"
            android:paddingTop="@dimen/dimen_xxxxlarge">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/padding_medium">

                <ImageView
                    android:layout_width="@dimen/dimen_xxmedium"
                    android:layout_height="@dimen/dimen_xxmedium"
                    android:tint="@color/primary_text"
                    app:srcCompat="@drawable/shape_cash" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/padding_medium"
                    android:gravity="center"
                    android:text="وضعیت کل"
                    android:textColor="@color/primary_text"
                    android:textSize="@dimen/font_xmedium" />
            </LinearLayout>

            <TextView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/primary_text" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/padding_medium">

                <TextView
                    android:id="@+id/textView_bill_vaziat_kol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="150,000,000"
                    android:textColor="@color/green"
                    android:textSize="@dimen/font_xmedium" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ریال"
                    android:textColor="@color/green"
                    android:textSize="@dimen/font_medium"
                    app:fontPath="fonts/IRANSansWeb_Bold.ttf" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout_add_layer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />


</android.support.design.widget.CoordinatorLayout>
