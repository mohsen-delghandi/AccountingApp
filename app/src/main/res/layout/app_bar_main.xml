<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    tools:context="com.example.mohsen.myaccountingapp.MainActivity">



    <LinearLayout
        android:id="@+id/linearLayout_titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:paddingRight="@dimen/padding_medium"
        android:paddingLeft="@dimen/padding_medium">

        <!--<android.support.v7.widget.Toolbar-->
            <!--android:id="@+id/toolbar"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="?attr/actionBarSize"-->
            <!--android:background="@android:color/transparent"-->
            <!--app:popupTheme="@style/AppTheme.PopupOverlay">-->


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/padding_medium"
                android:paddingBottom="@dimen/padding_medium"
                android:paddingRight="@dimen/padding_bit"
                android:paddingLeft="@dimen/padding_bit"
                android:gravity="center_vertical"
                android:background="@drawable/shape_underline">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_circle"
                    android:gravity="center">
                    <ImageView
                        android:id="@+id/imageView_navigation_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/shape_hamburger"
                        android:paddingRight="@dimen/padding_medium"
                        android:paddingLeft="@dimen/padding_medium"
                        android:paddingTop="@dimen/padding_small"
                        android:paddingBottom="@dimen/padding_small"
                        />
                    <TextView
                        android:layout_width="1px"
                        android:layout_height="wrap_content"
                        android:background="@color/icons"
                        android:alpha=".5"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/shape_home"
                        android:paddingRight="@dimen/padding_medium"
                        android:paddingLeft="@dimen/padding_medium"
                        android:paddingTop="@dimen/padding_small"
                        android:paddingBottom="@dimen/padding_small"
                        />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:paddingRight="@dimen/padding_medium">
                    <TextView
                        android:id="@+id/textView_title_farsi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="عنوان فارسی"
                        app:fontPath="fonts/IRANSansWeb_Bold.ttf"
                        android:textSize="@dimen/font_small"
                        android:gravity="center_vertical"
                        android:textColor="@color/primary_text"/>
                    <LinearLayout
                        android:layout_marginTop="-5dp"
                        android:layout_below="@id/textView_title_farsi"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">
                        <TextView
                            android:id="@+id/textView_title_english_bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TITLE"
                            android:textSize="@dimen/font_small"
                            android:gravity="center_vertical"
                            app:fontPath="fonts/IRANSansWeb_Bold.ttf"
                            android:textColor="@color/primary_text" />
                        <TextView
                            android:id="@+id/textView_title_english_normal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ENGLISH "
                            android:textSize="@dimen/font_small"
                            android:gravity="center_vertical"
                            android:textColor="@color/primary_text" />
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="left">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/shape_search"
                        android:background="@drawable/shape_circle"
                        android:padding="@dimen/padding_small"
                        />
                </LinearLayout>

            </LinearLayout>

            <!--</android.support.v7.widget.Toolbar>-->


    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="@dimen/fab_margin"
        android:scaleType="center"
        app:backgroundTint="@color/primary"
        app:srcCompat="@drawable/shape_plus" />

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/nestedscrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:fillViewport="true">

    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/linearLayout_add_layer"
        android:layout_height="match_parent"
        android:layout_width="match_parent"/>

</android.support.design.widget.CoordinatorLayout>
