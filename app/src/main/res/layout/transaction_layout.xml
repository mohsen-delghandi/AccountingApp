<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layoutDirection="rtl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/padding_bit"
    android:paddingLeft="@dimen/padding_bit">

    <LinearLayout
        android:paddingTop="@dimen/padding_medium"
        android:paddingBottom="@dimen/padding_large"
        android:layout_marginBottom="@dimen/padding_large"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@drawable/shape_circle"
            android:backgroundTint="@color/primary"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textView_transaction_daryaft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="دریافت"
                android:textSize="@dimen/font_xmedium"
                android:gravity="center"
                android:paddingBottom="@dimen/padding_medium"
                android:paddingTop="@dimen/padding_medium"
                android:paddingRight="@dimen/padding_spinner"
                android:paddingLeft="@dimen/padding_spinner"
                android:textColor="@color/icons"/>
            <TextView
                android:id="@+id/textView_transaction_pardakht"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="پرداخت"
                android:textSize="@dimen/font_xmedium"
                android:gravity="center"
                android:paddingBottom="@dimen/padding_medium"
                android:paddingTop="@dimen/padding_medium"
                android:paddingRight="@dimen/padding_spinner"
                android:paddingLeft="@dimen/padding_spinner"
                android:background="@drawable/shape_circle"
                android:backgroundTint="@color/primary_dark"
                android:textColor="@color/icons"/>
            <TextView
                android:visibility="gone"
                android:id="@+id/textView_transaction_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="همه"
                android:textSize="@dimen/font_xmedium"
                android:gravity="center"
                android:paddingBottom="@dimen/padding_medium"
                android:paddingTop="@dimen/padding_medium"
                android:paddingRight="@dimen/padding_spinner"
                android:paddingLeft="@dimen/padding_spinner"
                android:textColor="@color/icons"/>
        </LinearLayout>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView_transaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

    <TextView
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_item_height" />

</LinearLayout>