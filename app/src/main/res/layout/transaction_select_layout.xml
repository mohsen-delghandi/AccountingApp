<LinearLayout android:id="@+id/linearLayout_transaction_type_selection"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom|right"
    android:orientation="vertical"
    android:layoutDirection="rtl"
    android:background="#E6242E42"
    android:paddingRight="24dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/linearLayout_daryaft_select"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_small">

        <ImageView
            android:scaleType="centerCrop"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/arrow_right"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="دریافت"
            android:textSize="@dimen/font_medium"
            android:padding="@dimen/padding_bit"
            android:textColor="@color/icons"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout_pardakht_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_xxxxlarge"
        android:gravity="center_vertical">

        <ImageView
            android:scaleType="centerCrop"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/arrow_left"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="پرداخت"
            android:textSize="@dimen/font_medium"
            android:padding="@dimen/padding_bit"
            android:textColor="@color/icons"/>

    </LinearLayout>

</LinearLayout>